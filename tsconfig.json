{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext.asynciterable"
    ],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "src"
  },
  "files": [
    // TODO remove these as we progress through the refactoring
    "src/billing/types.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.test.ts", "**/*.test.tsx", "**/test/*", "**/__tests__/*",
    // TODO remove these as we progress through the refactoring
    "src/base-rest-resource.ts",
    "src/billing/**/*.ts"
  ],
}
